{
  "name": "@verndale/toolkit",
  "description": "Front end build system.",
  "license": "MIT",
  "version": "7.0.0",
  "author": {
    "name": "Verndale",
    "email": "hello@verndale.com"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/verndale/toolkit.git"
  },
  "scripts": {
    "check-deps": "check-dependencies --install",
    "typecheck": "tsc --noEmit",
    "js-lint": "eslint --fix --color ./src/scripts/**/*.*",
    "style-lint": "stylelint --fix --color ./src/scss/**/*.*",
    "prestart": "yarn check-deps",
    "start": "storybook dev -p 6006",
    "prebuild": "yarn check-deps && yarn js-lint && yarn style-lint",
    "build": "tsc && vite build",
    "build-storybook": "storybook build -o ./tools/component-library",
    "prepare": "husky install",
    "pre-commit": "lint-staged -p false"
  },
  "dependencies": {
    "@verndale/core": "2.1.1",
    "focus-visible": "^5.2.0",
    "highlight.js": "11.7.0",
    "picomatch": "2.3.1",
    "sass-mq": "^6.0.0",
    "sass-rem": "3.0.0",
    "scss-reset": "^1.2.2",
    "vite-plugin-stylelint": "4.3.0"
  },
  "devDependencies": {
    "@namics/stylelint-bem": "8.1.0",
    "@storybook/addon-a11y": "^7.0.2",
    "@storybook/addon-essentials": "^7.0.2",
    "@storybook/blocks": "^7.0.2",
    "@storybook/html": "^7.0.2",
    "@storybook/html-vite": "^7.0.2",
    "@storybook/testing-library": "^0.0.14-next.1",
    "@types/prompt-sync": "4.2.0",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "@types/uuid": "9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "autoprefixer": "10.4.14",
    "check-dependencies": "1.1.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.0",
    "msw": "1.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup-plugin-svg-icons": "2.1.2",
    "sass": "^1.58.3",
    "storybook": "^7.0.2",
    "storybook-addon-grid-overlay": "0.0.7",
    "storybook-msw-addon": "0.3.16",
    "stylelint": "15.2.0",
    "stylelint-config-sass-guidelines": "10.0.0",
    "stylelint-order": "6.0.3",
    "stylelint-prettier": "3.0.0",
    "stylelint-use-logical-spec": "5.0.0",
    "ts-node": "10.9.1",
    "typescript": "^4.9.3",
    "vite": "^4.2.3",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-imagemin": "0.6.1"
  },
  "msw": {
    "workerDirectory": "src/api"
  }
}
